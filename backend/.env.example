# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://sgd_user:sgd_pass@postgres:5432/sgd_ugel

# PostgreSQL credentials (para docker-compose)
POSTGRES_DB=sgd_ugel
POSTGRES_USER=sgd_user
POSTGRES_PASSWORD=sgd_pass

# Connection pool size
POSTGRES_POOL_SIZE=20

# =============================================================================
# MINIO CONFIGURATION (Object Storage)
# =============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_EXTERNAL_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=documentos-ugel
MINIO_SECURE=false

# =============================================================================
# REDIS CONFIGURATION (Message Broker & Cache)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# CELERY CONFIGURATION (Async Task Queue)
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_WORKER_CONCURRENCY=2
CELERY_MAX_RETRIES=3
CELERY_RETRY_DELAYS=60,300,900

# =============================================================================
# GOOGLE AI CONFIGURATION
# =============================================================================
# IMPORTANTE: Obtén tu API Key en https://makersuite.google.com/app/apikey
# NO COMPARTAS ESTA CLAVE PÚBLICAMENTE
GOOGLE_API_KEY=your_google_api_key_here

GEMINI_MODEL=gemini-2.5-pro
EMBEDDING_MODEL=models/text-embedding-004
EMBEDDING_DIMENSION=768

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=application/pdf,image/jpeg
TEMP_UPLOAD_DIR=/tmp/sgd-uploads

# =============================================================================
# OCR CONFIGURATION
# =============================================================================
TESSERACT_LANG=spa
OCR_MIN_TEXT_LENGTH=50

# =============================================================================
# TEXT PROCESSING CONFIGURATION
# =============================================================================
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
SEARCH_TOP_K=5
SEARCH_DEFAULT_PAGE_SIZE=10
SEARCH_MAX_PAGE_SIZE=50

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# DEVELOPMENT/PRODUCTION FLAGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
